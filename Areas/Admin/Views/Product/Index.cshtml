@model IEnumerable<ETicaretUygulamasi.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Ürün Kayıt</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Adı
            </th>
            <th>
                Açıklama
            </th>
            <th>
                Fiyat
            </th>
            <th>
                İndirimli Fiyat 
            </th>
            <th>
                Vergi
            </th>
            <th>
                Stok
            </th>
            <th>
                Kategori
            </th>
            <th>
                Ürün Grubu
            </th>
            <th>
                Oluşturma Tarihi    
            </th>
            <th>
                Düzenlenme Tarihi   
            </th>
            <th>
                Kayıt Eden Kullancı
            </th>
            <th>
                Düzenleyen Kullanıcı
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.DiscountedPrice
                </td>
                <td>
                    @item.TaxRate
                </td>
                <td>
                    @item.Category.Id
                </td>
                <td>
                    @item.TagGroup.Id
                </td>
                <td>
                    @item.CreatedAt
                </td>
                <td>
                    @item.ModifiedAt
                </td>
                <td>
                    @item.CreatedUserName
                </td>
                <td>
                    @item.ModifiedUserName
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
