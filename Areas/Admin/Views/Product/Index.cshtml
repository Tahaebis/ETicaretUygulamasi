@model IEnumerable<ETicaretUygulamasi.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Adı
            </th>
            <th>
                Açıklama
            </th>
            <th>
                Price
            </th>
            <th>
                DiscountedPrice
            </th>
            <th>
                TaxRate
            </th>
            <th>
                Stock
            </th>
            <th>
                Category
            </th>
            <th>
                TagGroup
            </th>
            <th>
                CreatedAt
            </th>
            <th>
                ModifiedAt
            </th>
            <th>
                CreatedUserName
            </th>
            <th>
                ModifiedUserName
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.DiscountedPrice
                </td>
                <td>
                    @item.TaxRate
                </td>
                <td>
                    @item.Category.Id
                </td>
                <td>
                    @item.TagGroup.Id
                </td>
                <td>
                    @item.CreatedAt
                </td>
                <td>
                    @item.ModifiedAt
                </td>
                <td>
                    @item.CreatedUserName
                </td>
                <td>
                    @item.ModifiedUserName
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
