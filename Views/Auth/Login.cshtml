@model LoginModel

<h1>Giriş Yap  </h1>
<hr />


<form method="post" asp-controller="Auth" asp-action="Login">
    <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
    <div class="form-group mb-3  col-3 text-center">
        <label asp-for="Email">E-Posta Adresi</label>
        <input asp-for="Email" class="form-control" placeholder="tahaebis@outlook.com">
        @* <small class="form-text text-muted">We'll never share your email with anyone else.</small> *@
        <span asp-validation-for="Email" class="text-danger small"></span>
    </div>
    <div class="form-group mb-3 col-3 text-center">
        <label asp-for="Password">Şifre</label>
        <input type="password" asp-for="Password" class="form-control" placeholder="123456789">
        <span asp-validation-for="Password" class="text-danger small"></span>
    </div>
    <div class="form-group mb-3 col-3 text-end">
        <a asp-controller="Auth" asp-action="ForgotPassword">Şifremi Unuttum</a>
    </div>
    <button type="submit" class="btn btn-primary col-2">Giriş Yap!</button>
</form>