@model ForgotPasswordModel

<h1>Şifremi Unuttum</h1>
<hr />


<form method="post" asp-controller="Auth" asp-action="ForgotPassword">
    <div class="form-group mb-3 col-3 text-center">
        <label asp-for="Email">E-Posta Adresiniz</label>
        <input asp-for="Email" class="form-control" placeholder="tahaebis@outlook.com">
        @* <small class="form-text text-muted">We'll never share your email with anyone else.</small> *@
        <span asp-validation-for="Email" class="text-danger small"></span>
    </div>

    <button type="submit" class="btn btn-primary col-2">Gönder</button>

    @if (ViewData["BasariliMesajGoster"] != null && (bool)ViewData["BasariliMesajGoster"] == true)
    {
        <div class="alert alert-success col-3 mt-3">
            E-posta adresinize gönderilen link'e tıklayarak, şifrenizi değiştirebilirsiniz.
        </div>
    }
</form>