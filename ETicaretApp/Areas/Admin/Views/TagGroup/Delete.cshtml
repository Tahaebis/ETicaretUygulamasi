@model ETicaretUygulamasi.Models.TagGroup

@{
    ViewData["Title"] = "Delete";
}

<h1>Sil</h1>

<h3>Silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Ürün Grubu</h4>
    <hr />
    <dl class="row table">
        <dt class="col-sm-2">
            Oluşturma Tar.
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedAt
        </dd>
        <dt class="col-sm-2">
            Güncellenme Tar.
        </dt>
        <dd class="col-sm-10">
            @Model.ModifiedAt
        </dd>
        <dt class = "col-sm-2">
            Kayıt Yapan Kullanıcı
        </dt>
        <dd class = "col-sm-10">
            @Model.CreatedUserName
        </dd>
        <dt class = "col-sm-2">
            Değiştirilen Kullanıcı Adı
        </dt>
        <dd class = "col-sm-10">
            @Model.ModifiedUserName
        </dd>
        <dt class = "col-sm-2">
            Adı
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            Açıklama
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>
        <dt class = "col-sm-2">
            Hidden
        </dt>
        <dd class = "col-sm-10">
            @Model.Hidden
        </dd>
        <dt class = "col-sm-2">
            Locked
        </dt>
        <dd class = "col-sm-10">
            @Model.Locked
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
        <a asp-action="Index" class="btn btn-secondary btn-sm">Geri Dön!</a>
    </form>
</div>
