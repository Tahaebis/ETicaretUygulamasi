@using ETicaretUygulamasi.Models
@model IEnumerable<ETicaretUygulamasi.Models.TagGroup>

@{
    ViewData["Title"] = "Index";
}

<h1>Ürün Grupları</h1>
<hr />

<div class="mb-3">
    <a class="btn btn-primary btn-sm" asp-action="Create">Yeni Ürün Grubu</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Açıklama</th>
            <th>Gizli</th>
            <th>Kilitli</th>
            <th>Oluş. Tar.</th>
            <th>Oluşturan</th>
            <th>Güncel. Tar.</th>
            <th>Güncelleyen</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (TagGroup item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    @if (item.Hidden)
                    {
                        <span class="text-danger">
                            <i class="fa-regular fa-circle-xmark text-danger me-2"></i>Gizli
                        </span>
                    }
                    else
                    {
                        <span class="text-success">
                            <i class="fa-regular fa-circle-check text-success me-2"></i>Görünür
                        </span>
                    }
                </td>
                <td>
                    @if (item.Locked)
                    {
                        <span class="text-danger">
                            <i class="fa-regular fa-circle-xmark text-danger me-2"></i>Kilitli
                        </span>
                    }
                    else
                    {
                        <span class="text-success">
                            <i class="fa-regular fa-circle-check text-success me-2"></i>Aktif
                        </span>
                    }
                </td>
                <td class="small">@item.CreatedAt</td>
                <td class="small">@item.CreatedUserName</td>
                <td class="small">@item.ModifiedAt</td>
                <td class="small">@item.ModifiedUserName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Bu ürün grubu silinsin mi?');" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
